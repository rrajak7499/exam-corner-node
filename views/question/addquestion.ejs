<html>
  <head>
    <title><%=title %></title>
    <link rel="stylesheet" href="/css/styles.css" type="text/css" />
  </head>
  <body>
    <div class="">
      <div class="name"><b><%=greetMsg%></b></div>
      <div class="logo1">
        <img
          src="/img/logo_png.png"
          class="logo-img"
          width="100%"
          height="100%"
        />
      </div>
      <div class="q-main1 q-main-text">
        <% if(addStatus === 'false') {%>
        <div class="valid1">question is already Done</div>
        <%}%>
        <form action="/viewquestion" method="post">
          <div class="formDiv">
            <label class="label" for="QUESTION">Question:</label>
            <input type="text" class="input" id="QUESTION" name="question" />
          </div>
          <div class="formDiv">
            <label class="label" for="OPTION">Option A:</label>
            <input type="text" class="input" id="OPTION" name="a" />
          </div>
          <div class="formDiv">
            <label class="label" for="OPTION">Option B:</label>
            <input type="text" class="input" id="OPTION" name="b" />
          </div>
          <div class="formDiv">
            <label class="label" for="OPTION">Option C:</label>
            <input type="text" class="input" id="OPTION" name="c" />
          </div>
          <div class="formDiv">
            <label class="label" for="OPTION">Option D:</label>
            <input type="text" class="input" id="OPTION" name="d" />
          </div>
          <div class="formDiv">
            <label class="label" for="Ans">Ans:</label>
            <input type="text" class="input" id="Ans" name="ans" />
          </div>
          <input type="submit" value="ADD" />
        </form>
      </div>
    </div>
  </body>
</html>
