<html>
  <head>
    <title>Student Login</title>
    <link rel="stylesheet" href="/css/styles.css" type="text/css" />
  </head>
  <body class="userlog">
    <div class="name"><b>Exam Corner</b></div>
    <div class="logo1">
      <img
        src="/img/logo_png.png"
        class="logo-img"
        width="100%"
        height="100%"
      />
    </div>
    <div class="main">
      <form action="/username" method="post">
        <h1 class="user_login"><b>User Login</b></h1>
        <div class="formDiv">
          <label class="label" for="USERNAME">USERNAME</label>
          <input type="email" class="input" id="USERNAME" name="email" />
        </div>
        <div class="formDiv">
          <label class="label" type="password" for="PASSWORD">PASSWORD</label>
          <input type="password" class="input" id="PASSWORD" name="password" />
        </div>
        <br />

        <div>
          <button class="submit" value="submit">Submit</button>
          <!-- <input class="" type="submit" value="submit" /> -->
        </div>
        <% if(loginStatus === 'false') { %>
        <div class="valid">Email and password wrong</div>
        <% } %>
      </form>
    </div>
  </body>
</html>
