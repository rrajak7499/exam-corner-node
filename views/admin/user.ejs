<body>
    <% user.forEach(value => {%>
        <form action="/main/update" method="post">
            <div>
                <input type="hidden" name="id" value="<%= value._id %>" >
                Username:
                <input
                    type="text"
                    name="username"
                    id="username"
                    value="<%= value.username %>"
                >
                Email:
                <input
                    type="email"
                    name="email"
                    id="email"
                    value="<%= value.email %>"
                >
                Number:
                <input
                    type="number"
                    name="number"
                    id="number"
                    value="<%= value.number %>"
                >
                Password
                <input
                    type="text"
                    name="password"
                    id="password"
                    value="<%= value.password %>"
                > 
                <input type="submit" value="update">
                <input type ="submit" formaction="/main/delete" value="delete">

             </div>
        </form>
        <% }) %>
